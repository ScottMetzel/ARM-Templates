{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "RegionName": {
            "type": "string",
            "allowedValues": [
                "westus",
                "westus2",
                "westus3"
            ],
            "defaultValue": "westus2"
        },
        "VirtualNetworkGatewayName": {
            "type": "string",
            "defaultValue": "Dev-VNG-NetworkTesting-01"
        },
        "VNETName": {
            "type": "string",
            "defaultValue": "Dev-VNET-NetworkTesting-01"
        },
        "BastionPIPName": {
            "type": "string",
            "defaultValue": "Dev-PIP-BastionNetworkTesting-01"
        },
        "BastionName": {
            "type": "string",
            "defaultValue": "Dev-BAST-NetworkTesting-01"
        },
        "VMName": {
            "type": "string",
            "defaultValue": "TestVM01"
        },
        "AdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine."
            }
        },
        "AdminPasswordOrKey": {
            "type": "securestring",
            "metadata": {
                "description": "SSH Key or password for the Virtual Machine. SSH key is recommended."
            }
        },
        "ubuntuOSVersion": {
            "type": "string",
            "defaultValue": "Ubuntu-2004",
            "allowedValues": [
                "Ubuntu-2004",
                "Ubuntu-2204"
            ],
            "metadata": {
                "description": "The Ubuntu version for the VM. This will pick a fully patched image of this given Ubuntu version."
            }
        },
        "VMSize": {
            "type": "string",
            "defaultValue": "Standard_D16s_v5",
            "metadata": {
                "description": "The size of the VM"
            }
        },
        "OSDiskType": {
            "type": "string",
            "defaultValue": "StandardSSD_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Premium_LRS",
                "StandardSSD_LRS",
                "UltraSSD_LRS"
            ],
            "metadata": {
                "description": "The type of OS disk to use for the VM."
            }
        }
    },
    "variables": {
        "networkInterfaceName": "[concat('Dev-NIC-',parameters('VMName'),'-01')]",
        "OSDiskName": "[concat('Dev-MDK-',parameters('VMName'),'-01')]",
        "imageReference": {
            "Ubuntu-2004": {
                "publisher": "Canonical",
                "offer": "0001-com-ubuntu-server-focal",
                "sku": "20_04-lts-gen2",
                "version": "latest"
            },
            "Ubuntu-2204": {
                "publisher": "Canonical",
                "offer": "0001-com-ubuntu-server-jammy",
                "sku": "22_04-lts-gen2",
                "version": "latest"
            }
        }
    },
    "resources": [
        {
            "name": "[parameters('VNETName')]",
            "id": "/subscriptions/c28d3300-fe77-440d-afc1-970e0c71866e/resourceGroups/Dev-RG-NetworkTesting-01/providers/Microsoft.Network/virtualNetworks/Dev-VNET-NetworkTesting-01",
            "location": "westus2",
            "type": "Microsoft.Network/virtualNetworks",
            "properties": {
                "subnets": [
                    {
                        "name": "AzureBastionSubnet",
                        "id": "/subscriptions/c28d3300-fe77-440d-afc1-970e0c71866e/resourceGroups/Dev-RG-NetworkTesting-01/providers/Microsoft.Network/virtualNetworks/Dev-VNET-NetworkTesting-01/subnets/AzureBastionSubnet",
                        "properties": {
                            "addressPrefix": "10.200.150.64/26"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "id": "/subscriptions/c28d3300-fe77-440d-afc1-970e0c71866e/resourceGroups/Dev-RG-NetworkTesting-01/providers/Microsoft.Network/virtualNetworks/Dev-VNET-NetworkTesting-01/subnets/GatewaySubnet",
                        "properties": {
                            "addressPrefix": "10.200.150.0/26"
                        }
                    },
                    {
                        "name": "RemoteManagement01",
                        "id": "/subscriptions/c28d3300-fe77-440d-afc1-970e0c71866e/resourceGroups/Dev-RG-NetworkTesting-01/providers/Microsoft.Network/virtualNetworks/Dev-VNET-NetworkTesting-01/subnets/RemoteManagement01",
                        "properties": {
                            "addressPrefix": "10.200.150.128/28"
                        }
                    }
                ],
                "addressSpace": {
                    "addressPrefixes": [
                        "10.200.150.0/24"
                    ]
                }
            },
            "tags": {},
            "apiVersion": "2019-09-01",
            "dependsOn": []
        },
        {
            "apiVersion": "2024-05-01",
            "name": "[parameters('VirtualNetworkGatewayName')]",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "location": "[parameters('RegionName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'Dev-VNET-NetworkTesting-01')]"
            ],
            "properties": {
                "gatewayType": "ExpressRoute",
                "ipConfigurations": [
                    {
                        "name": "default",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('VNETName')), '/subnets/GatewaySubnet')]"
                            }
                        }
                    }
                ],
                "sku": {
                    "name": "UltraPerformance",
                    "tier": "UltraPerformance"
                }
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2022-07-01",
            "name": "[parameters('BastionPIPName')]",
            "location": "[parameters('RegionName')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/bastionHosts",
            "apiVersion": "2024-05-01",
            "name": "[parameters('BastionName')]",
            "location": "[parameters('RegionName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('VNETName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('BastionPIPName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VNETName'), 'AzureBastionSubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('BastionPIPName'))]"
                            }
                        }
                    }
                ]
            },
            "sku": {
                "name": "Standard"
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-09-01",
            "name": "[variables('networkInterfaceName')]",
            "location": "[parameters('RegionName')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('VNETName')), '/subnets/RemoteManagement01')]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('VNETName'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-09-01",
            "name": "[parameters('VMName')]",
            "location": "[parameters('RegionName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "VMSize": "[parameters('VMSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('OSDiskType')]"
                        },
                        "name": "[variables('OSDiskName')]"
                    },
                    "imageReference": "[variables('imageReference')[parameters('ubuntuOSVersion')]]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "AdminUsername": "[parameters('AdminUsername')]",
                    "adminPassword": "[parameters('AdminPasswordOrKey')]"
                }
            }
        }
    ]
}